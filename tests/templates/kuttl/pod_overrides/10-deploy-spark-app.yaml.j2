---
apiVersion: spark.stackable.tech/v1alpha1
kind: SparkApplication
metadata:
  name: spark-pi-s3-1
spec:
  version: "1.0"
  sparkImage:
    productVersion: "{{ test_scenario['values']['spark'] }}"
    pullPolicy: IfNotPresent
  mode: cluster
  mainClass: org.apache.spark.examples.SparkPi
  mainApplicationFile: "s3a://my-bucket/spark-examples_{{ test_scenario['values']['spark'].split('-stackable')[0] }}.jar"
  s3connection:
    reference: spark-data-s3-connection
  logFileDirectory:
    s3:
      prefix: eventlogs/
      bucket:
        reference: spark-history-s3-bucket
  job:
    podOverrides:
      spec:
        containers:
          - name: spark-submit
            resources:
              requests:
                cpu: 500m
                memory: 512Mi
              limits:
                cpu: 1500m
                memory: 1024Mi
  driver:
    podOverrides:
      spec:
        containers:
          - name: spark
            resources:
              requests:
                cpu: 500m
                memory: 512Mi
              limits:
                cpu: 1500m
                memory: 1024Mi
  executor:
    instances: 1
    podOverrides:
      spec:
        containers:
          - name: spark
            resources:
              requests:
                cpu: 500m
                memory: 512Mi
              limits:
                cpu: 1500m
                memory: 1024Mi
